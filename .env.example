# Demo Mode
# Set to "true" to enable demo data, "false" to use real API/database
NEXT_PUBLIC_DEMO_MODE=false

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=YourApp
MONGODB_DB_NAME=airswap

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Sentry Configuration (optional, for error tracking)
# Get your DSN from https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_DSN=

# Blockchain Configuration (Polygon Amoy Testnet)
# Contract address after deployment
NEXT_PUBLIC_OXYGEN_CREDITS_CONTRACT=0x...YourContractAddress
# Get from: https://thirdweb.com/dashboard/settings
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=your_client_id
# Server-side secret key (NEVER expose to frontend!)
THIRDWEB_SECRET_KEY=your_secret_key
# Polygon Amoy RPC (default provided by thirdweb)
POLYGON_AMOY_RPC=https://rpc-amoy.polygon.technology/
# IPFS Storage (optional, for metadata)
THIRDWEB_STORAGE_SECRET=your_storage_secret

# Google Earth Engine (for NDVI satellite analysis)
# Follow GEE_SETUP_GUIDE.md to set up your service account
# Get from: https://console.cloud.google.com/
GEE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GEE_PRIVATE_KEY_PATH=./credentials/gee-service-account.json
GEE_PROJECT_ID=your-google-cloud-project-id
